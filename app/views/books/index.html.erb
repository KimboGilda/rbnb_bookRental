<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="text-primary" class="mb-0">All Books Available</h1>
    <%= link_to "âž• Add a new book", new_book_path, class: "add-a-new-book-button" %>
  </div>

  <div class="row">
   <% @books.each do |book| %>
     <div class="card m-3">
      <%= link_to book_path(book), class:"text-decoration-none" do %>

        <%= image_tag("https://www.designforwriters.com/wp-content/uploads/2017/10/design-for-writers-book-cover-tf-2-a-million-to-one.jpg",
        class:"card-image" )
        %>
        <h5><%= book.title %></h5>
        <p><%= book.author %></p>
        <p><%= book.price %></p>
   <% end %>
        </div>
   <% end %>
 </div >
</div>
