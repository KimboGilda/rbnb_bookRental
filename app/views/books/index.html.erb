<div class="container" style="max-width: 1000px; margin: 0 auto; padding: 20px;">
  <h1 style="margin-bottom: 20px;">All Books</h1>

  <div class="book-list">
    <% @books.each do |book| %>
      <div class="book-card" style="display: flex; align-items: center; background-color: #f9f9f9; border: 1px solid #ddd; padding: 15px; border-radius: 10px; margin-bottom: 20px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">

        <!-- Image section -->
        <div class="book-image" style="flex: 0 0 80px; margin-right: 20px;">
          <!-- Imagen del libro (placeholder por ahora) -->
          <img src="IMG_URL" alt="Book Image" style="width: 80px; height: 80px; object-fit: cover; border-radius: 5px;">
        </div>

        <!-- Info section -->
        <div class="book-info" style="flex: 1;">
          <h2 style="margin-bottom: 5px; font-size: 18px; color: #333;"><%= link_to book.title, book_path(book), style: "text-decoration: none; color: inherit;" %></h2>
          <p style="font-size: 14px; color: #555; margin: 0;">by <strong style="color: #333;"><%= book.author %></strong></p>
          <p style="font-size: 14px; color: #555; margin: 0;">Genre: <strong style="color: #333;"><%= book.genre %></strong></p>
          <p style="font-size: 14px; color: #555; margin: 0;">Price: <strong style="color: #333;"><%= book.price %></strong> â‚¬</p>
        </div>

      </div>
    <% end %>
  </div>
</div>
