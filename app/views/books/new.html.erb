<div class="container">
  <h1>Creating new book </h1>
  <%= simple_form_for(@book) do |f| %>
  <%= f.input :title %>
  <%= f.input :author %>
  <%= f.input :genre %>
  <%= f.input :price %>
  <%= f.input :availability,
            :as => :select,
            :collection => [['Available', true],['Not available', false]],
            :include_blank => false,
            :label => "Type" %>
  <%= f.submit %>
<% end %>
</div>
